<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Movie" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- Allows us to override night specific attributes in the
       values-night folder. -->
    <style name="NightAdjusted.Theme.Movie" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Movie.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Movie</item>
    </style>
</resources>